#
# System initialization script for rez. Source this file in order to use rez. 
# You probably want to do that in ~/.cshrc or equivalent startup script.
#

# Rez version.
setenv REZ_VERSION @REZ_VERSION@

# Where Rez is installed.
setenv REZ_PATH @rez_path@

# Set debug mode by default.
setenv REZ_DEBUG 1

# Add Rez to our environment.
setenv PATH ${REZ_PATH}/bin/rez:${PATH}

# where rez will publish local packages to (ie those installed with rez-build -- -- install)
if (! $?REZ_LOCAL_PACKAGES_PATH ) then
    setenv REZ_LOCAL_PACKAGES_PATH $HOME/packages
endif

# where unleash will publish packages to (ie those released with rez-unleash)
if (! $?REZ_UNLEASH_PACKAGES_PATH ) then
    setenv REZ_UNLEASH_PACKAGES_PATH /var/tmp/rezunleash
endif

# where rez will publish packages to (ie those released with rez-release)
if (! $?REZ_RELEASE_PACKAGES_PATH ) then
    setenv REZ_RELEASE_PACKAGES_PATH /film/tools/packages
endif

# where rez searches for packages
if (! $?REZ_PACKAGES_PATH ) then
    setenv REZ_PACKAGES_PATH ${REZ_LOCAL_PACKAGES_PATH}:${REZ_RELEASE_PACKAGES_PATH}
endif

# where rez will look for additional configuration
if (! $?REZ_CONFIG_FILE ) then
    setenv REZ_CONFIG_FILE /film/tools/packages/rez/rezconfig
endif

# Tell Rez where our downloads live.
setenv REZ_EXTERNAL_PACKAGES_DOWNLOADS /film/tools/packages/downloads

source ${REZ_PATH}/completion/complete.csh

# Add some alias for Rez to use.
alias b 'rez build --build-target RelWithDebInfo --install -- -- -j 16'
alias b0 'rez build --build-target RelWithDebInfo --variants 0 --install -- -- -j 16'
alias b1 'rez build --build-target RelWithDebInfo --variants 1 --install -- -- -j 16'
alias b2 'rez build --build-target RelWithDebInfo --variants 2 --install -- -- -j 16'
alias b3 'rez build --build-target RelWithDebInfo --variants 3 --install -- -- -j 16'
alias b4 'rez build --build-target RelWithDebInfo --variants 4 --install -- -- -j 16'
alias bc b
alias bc0 b0
alias bc1 b1
alias bc2 b2
alias bc3 b3
alias bc4 b4

